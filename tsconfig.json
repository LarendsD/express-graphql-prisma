{
  "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "lib": [
          "dom",
          "esnext.asynciterable"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "pretty": true,
      "baseUrl": "core",
      "rootDir": "core",
      "outDir": "./dist",
      "allowJs": true,
      "paths": {
          "@common": [
              "./common/*"
          ],
          "@core": [
              "./core/*"
          ],
          "@database": [
              "./database/*"
          ],
          "@loaders": [
              "./loaders/*"
          ]
      }
  },
  "exclude": [
      "node_modules"
  ],
  "include": [
      "core/*.ts",
      "core/public/.gitignore",
      "core/**/*.ts",
      "core/**/**/*.ts",
      "core/**/**/**/*.ts",
      "core/**/**/**/**/*.ts",  
    ]
}